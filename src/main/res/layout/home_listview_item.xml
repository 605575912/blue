<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.show.blue.view.FishBowlView
        android:id="@+id/fishbowlview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        mm:fishbowl_maxprogress="100"
        mm:fishbowl_progress="50"
        mm:fishbowl_strokewidth="2dp"
        mm:fishbowl_wavetime="200"
        mm:water_center_color="@color/aorange"
        mm:water_color="@color/aorange"
        mm:water_end_color="@color/aorange">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="85%" />
    </com.show.blue.view.FishBowlView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textColor="@color/dgray" />
</LinearLayout>